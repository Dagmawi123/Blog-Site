<section class="posts">
    <div class="container posts_container">
        <% post.forEach(p=>{%>
        <article class="post">
<div class="post_thumbnail">
    <img src="images/<%= p.Thumbnail %> " alt="">
</div>
<div class="post_info">
    <a href="" class="category_button"><%= p.Category.Title %></a>
    <h3 onclick="view('<%=p._id%>')" class="post_title"><a ><%=p.Title %></a></h3>
<p class="post_body">
<%=p.Body%> </p>
<div class="post_author">
    <div class="post_author-avatar">
        <img src='images/<%=p.Author.Avatar%>' alt="">
    </div>
<div class="post_author-info">
    <h5>By:<%=" "%><%=p.Author.Fname+" " %> <%=p.Author.Lname%></h5>
    <small><%=p.Date%></small>
</div>
</div>
</div>
        </article>
        <%})%>
    

